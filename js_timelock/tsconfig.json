{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "esnext",
		"target": "es6",
		"lib": ["es6", "es7", "dom"],
		"pretty": true,
		"strict": true,
		"allowJs": true,
		"alwaysStrict": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "dist/types",
		"emitDeclarationOnly": true,
	},
	"include": [
		"./src"
	],
	"exclude": [
		"./node_modules",
	]
}
